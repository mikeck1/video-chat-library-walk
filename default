server {
	root /var/www/tritontalk;
	index index.html index.htm index.nginx-debian.html;
	server_name tritontalk.jacksheridan.com;
	
	location /api/ {
		proxy_pass http://127.0.0.1:3001;
	}

	listen [::]:443 ssl ipv6only=on; # managed by Certbot
	listen 443 ssl; # managed by Certbot
	ssl_certificate /etc/letsencrypt/live/tritontalk.jacksheridan.com/fullchain.pem; # managed by Certbot
	ssl_certificate_key /etc/letsencrypt/live/tritontalk.jacksheridan.com/privkey.pem; # managed by Certbot
	include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {

	if ($host = tritontalk.jacksheridan.com) {
		return 301 https://$host$request_uri;
	} # managed by Certbot

	listen 80 default_server;
	listen [::]:80 default_server;

	server_name tritontalk.jacksheridan.com;
	return 404; # managed by Certbot
}
